@model IEnumerable<DoAnWeb.Models.Phong>

@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "ma_phong", rowsPerPage: 8);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
}

<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("TimKiem", "Phongs_62133178", FormMethod.Get))
        {
            @Html.AntiForgeryToken()
            <table class="table1" align="center">
                <tr>
                    <td>Mã phòng</td>
                    <td>
                        <input type="text" name="maPhong" value="@ViewBag.maPhong" class="form-control mxy-5" />
                    </td>

                </tr>
                <tr>
                    <td>Tên phòng</td>
                    <td>
                        <input type="text" name="tenPhong" value="@ViewBag.tenPhong" class="form-control mxy-5" />
                    </td>

                </tr>
                <tr>
                    <td></td>
                    <td class="pt-3">
                        <input type="submit" name="submit" value="Tìm kiếm" class="btn btn-primary" />
                        <input type="button" name="Nhapmoi" value="Nhập mới" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "PhongUser_62133178/Index")'" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <div><h3 style="text-align: center">DANH SÁCH PHÒNG</h3></div>
    <div id="gridContent" class="mt-3">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
                  grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
                  grid.Column("ma_phong","Mã phòng"), //the model fields to display
                  grid.Column("ten_phong","Tên phòng"),
                  grid.Column("so_giuong","Số giường"),
                  grid.Column("loai_phong","Loại phòng"),
                  grid.Column("gia_phong","Giá phòng",format:@<text> @item.gia_phong.ToString("#,##0")</text>),
grid.Column("Chức năng", format: @<text>
                    <a href="@Url.Action("Edit",
                        new { id = item.ma_phong})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
                    
                    <a href="@Url.Action("Delete",
                        new { id = item.ma_phong})" class="edit-btn">
                        <abbr title="Xóa dữ liệu">
                            <img src="/images/delete.png" width="20" height="20" />
                        </abbr>
                    </a>
</text>),
}
)
    </div>
</body>
</html>