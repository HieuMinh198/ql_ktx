@model IEnumerable<DoAnWeb.Models.phieu_dat_phong>

@{
    ViewBag.Title = "Danh sách phiếu đặt phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "ma_phieu_dat_phong", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
    int i = 0;
}


<h3 class="text-center">DANH SÁCH PHIẾU ĐẶT PHÒNG</h3>

<div id="gridContent">
    
    @grid.GetHtml(
        tableStyle: "table table-bordered table-hover",
        footerStyle: "grid-footer",
        fillEmptyRows: true,
        mode: WebGridPagerModes.Numeric,
        alternatingRowStyle: "alternatingRowStyle",
          columns: new[]  // colums in grid
         {
      grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
        grid.Column("ma_phieu_dat_phong","Mã phiếu"), //the model fields to display
        grid.Column("ngay_dat","Ngày đặt",format:@<text> @item.ngay_dat.ToString("dd/MM/yyyy")</text>),
              grid.Column("ngay_bat_dau","Ngày bắt đầu",format:@<text> @item.ngay_bat_dau.ToString("dd/MM/yyyy")</text>),
              grid.Column("ngay_ket_thuc","Ngày kết thúc",format:@<text> @item.ngay_ket_thuc.ToString("dd/MM/yyyy")</text>),
              grid.Column("tong_tien","Tổng tiền"),
              grid.Column("Phong.ten_phong","Tên phòng"),
              grid.Column("Chức năng", format: @<text>
    <a href="@Url.Action("Edit",
                        new { id = item.ma_phieu_dat_phong})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
    <a href="@Url.Action("Delete",
                        new { id = item.ma_phieu_dat_phong})" class="edit-btn">
        <abbr title="Xóa dữ liệu">
            <img src="/images/delete.png" width="20" height="20" />
        </abbr>
    </a>
</text>),
}
)
</div>
<style type="text/css">
    .grid-footer {
        color: #000;
        font: 17px Calibri;
        text-align: center;
        font-weight: bold;
    }

        .grid-footer a {
            background-color: #ffffff;
            color: blue;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            padding: 1px 10px 2px 10px;
        }

            .grid-footer a:active, a:hover {
                background-color: #ffffff;
                color: #FFAD33;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            }

    .alternatingRowStyle {
        background-color: aliceblue;
    }

    table .table1 {
        text-align: left;
        margin-left: 0px;
        margin-right: 0px;
        width: 800px;
    }

    .tr, .td {
        text-align: left;
    }
</style>
