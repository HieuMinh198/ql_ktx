@model DoAnWeb.Models.dich_vu

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .details-container {
        display: flex;
        align-items: center;
    }

    .details-image {
        margin-right: 20px;
    }

    .details-info {
        width: 100%;
    }
</style>

<div style="margin-left: 30px;">
    <h2>THÔNG TIN CHI TIẾT</h2>
    <div class="details-container">
        <div class="details-info">
            <table cellpadding="2" cellspacing="10">
                <tr>
                    <td>Mã dịch vụ: </td>
                    <td>@Html.DisplayFor(model => model.ma_dich_vu)</td>
                </tr>
                <tr>
                    <td>Tên dịch vụ: </td>
                    <td>@Html.DisplayFor(model => model.ten_dich_vu)</td>
                </tr>
                <tr>
                    <td>Giá dịch vụ </td>
                    <td>@Html.DisplayFor(model => model.gia_dich_vu)</td>
                </tr>
            </table>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.ma_dich_vu }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
