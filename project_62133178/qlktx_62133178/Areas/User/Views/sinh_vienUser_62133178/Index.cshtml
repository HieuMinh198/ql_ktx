@model IEnumerable<DoAnWeb.Models.sinh_vien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "ma_sv", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
}

<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }

        input {
            margin-left: 5px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("TimKiemNC", "sinh_vien_62133178", FormMethod.Get))
        {
            @Html.AntiForgeryToken()


            <table class="table1" align="center">
                <tr>
                    <td>
                        <div> Mã sinh viên</div>
                    </td>
                    <td>
                        <input type="text" class="form-control" name="MaSV" value="@ViewBag.MaSV" />
                    </td>

                </tr>
                <tr>
                    <td>Họ tên</td>
                    <td>
                        <input type="text" class="form-control" name="HoTen" value="@ViewBag.HoTen" />
                    </td>

                </tr>

                <tr>
                    <td>Giới tính</td>
                    <td>
                        <input type="text" class="form-control" name="GioiTinh" value="@ViewBag.GioiTinh" />
                    </td>

                </tr>
                <tr>
                    <td>Lớp</td>
                    <td>
                        <input type="text" class="form-control" name="Lop" value="@ViewBag.Lop" />
                    </td>

                </tr>
                <tr>
                    <td>Quê quán</td>
                    <td>
                        <input type="text" class="form-control" name="QueQuan" value="@ViewBag.QueQuan" />
                    </td>
                </tr>
                <tr>
                    <td>Phòng</td>
                    <td>
                        @Html.DropDownList("MaPB", null, "Tất cả", htmlAttributes: new { @class = "form-control pxy-5" })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="submit" class="btn btn-primary" value="Tìm kiếm"  />
                        <input type="button" name="Nhapmoi" class="btn btn-danger" value="Nhập mới"  onclick="location.href='@Url.Action("TimKiemNC", "sinh_vien_62133178/TimKiemNC")'" />

                    </td>
                </tr>
            </table>
        }
    </div>
    <div id="gridContent" class="container pt-3">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
                  grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
                  grid.Column("ma_sv","Mã sinh viên"), //the model fields to display
                  grid.Column("ho_ten","Họ tiên" ),
                  grid.Column("gioi_tinh","Giới tính"),
                  grid.Column("ngay_sinh","Ngày sinh",format:@<text> @item.ngay_sinh.ToString("dd/MM/yyyy")</text>),
                grid.Column("que_quan","Quê quán"),
                grid.Column("lop","Lớp"),
                grid.Column("email","Email"),
                grid.Column("ngay_vao_o","Ngày vào ở",format:@<text> @item.ngay_vao_o.ToString("dd/MM/yyyy")</text>),
                grid.Column("Phong.ten_phong","Phòng"),
             }
        )
    </div>
</body>
</html>