<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/StyleAdmin.css" rel="stylesheet" />
</head>
<body style="margin-top:0px;">
    <div id="banner" style="top:0px;position:absolute;">HỆ THỐNG QUẢN LÝ KÝ TÚC XÁ </div>
    <div id="menu" style="margin-top:10px;">
        <div>
            <div class="menu-items">
                <div class="menu-item">
                    @Html.ActionLink("Sinh viên", "Index", "sinh_vien", "", new { @class = "a" })
                    <div class="submenu">
                        <ul class="submenu-list">
                            <li>@Html.ActionLink("Thêm mới", "Create", "sinh_vien", "", new { @class = "a" })</li>
                            <li>@Html.ActionLink("Tìm kiếm", "TimKiemNC", "sinh_vien", "", new { @class = "a" })</li>
                            <li>@Html.ActionLink("In danh sách", "PrintList", "sinh_vien", "", new { @class = "a" })</li>
                        </ul>
                    </div>
                </div>
                <div class="menu-item">
                    @Html.ActionLink("Phòng", "Index", "Phongs", "", new { @class = "a" })
                    <div class="submenu">
                        <ul class="submenu-list">
                            <li>@Html.ActionLink("Thêm mới", "Create", "Phongs", "", new { @class = "a" })</li>
                            <li>@Html.ActionLink("Tìm kiếm", "TimKiem", "Phongs", "", new { @class = "a" })</li>
                        </ul>
                    </div>
                </div>
                <div class="menu-item">
                    @Html.ActionLink("Phiếu đặt phòng", "Index", "phieu_dat_phong", "", new { @class = "a" })
                    <div class="submenu">
                        <ul class="submenu-list">
                            <li>@Html.ActionLink("Thêm mới", "Create", "phieu_dat_phong", "", new { @class = "a" })</li>

                        </ul>
                    </div>
                </div>
                <div class="menu-item">
                    @Html.ActionLink("Dịch vụ", "Index", "dich_vu", "", new { @class = "a" })
                    <div class="submenu">
                        <ul class="submenu-list">
                            <li>@Html.ActionLink("Thêm mới", "Create", "dich_vu", "", new { @class = "a" })</li>

                        </ul>
                    </div>
                </div>
                <div class="menu-item">
                    @Html.ActionLink("Dịch vụ phòng", "Index", "dich_vu_phong1", "", new { @class = "a" })
                    <div class="submenu">
                        <ul class="submenu-list">
                            <li>@Html.ActionLink("Thêm mới", "Create", "dich_vu_phong1", "", new { @class = "a" })</li>

                        </ul>
                    </div>
                </div>
                <div class="menu-item">@Html.ActionLink("Hóa đơn dịch vụ", "CalculateServiceCost", "dich_vu_phong", "", new { @class = "a" })</div>
                <div class="col-md-10">@Html.Partial("_LoginPartial")</div>
            </div>
            <hr style="display: block;border-top: 1px solid aqua;  margin: 8px 0;" />
        </div>
    </div>
    <div id="content">
        @RenderBody()
    </div>
</body>
</html>
