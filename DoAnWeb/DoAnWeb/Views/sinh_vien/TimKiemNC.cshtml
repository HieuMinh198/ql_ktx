@model List<DoAnWeb.Models.sinh_vien>
@{
    ViewBag.Title = "TimKiemNC";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "ma_sv", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")

}
<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
        input {
            margin-left: 5px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("TimKiemNC", "sinh_vien", FormMethod.Get))
        {
            @Html.AntiForgeryToken()


            <table class="table1" align="center">
                <tr>
                    <td>
                        <div> Mã sinh viên</div>
                    </td>
                    <td>
                        <input type="text" name="MaSV" value="@ViewBag.MaSV" />
                    </td>

                </tr>
                <tr>
                    <td>Họ tên</td>
                    <td>
                        <input type="text" name="HoTen" value="@ViewBag.HoTen" />
                    </td>

                </tr>

                <tr>
                    <td>Giới tính</td>
                    <td>
                        <input type="text" name="GioiTinh" value="@ViewBag.GioiTinh" />
                    </td>

                </tr>
                <tr>
                    <td>Lớp</td>
                    <td>
                        <input type="text" name="Lop" value="@ViewBag.Lop" />
                    </td>

                </tr>
                <tr>
                    <td>Quê quán</td>
                    <td>
                        <input type="text" name="QueQuan" value="@ViewBag.QueQuan" />
                    </td>
                </tr>
                <tr>
                    <td>Phòng</td>
                    <td>
                        @Html.DropDownList("MaPB", null, "Tất cả", htmlAttributes: new { @class = "form-control" })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="submit" value="Tìm kiếm" style="margin: 5px;width:100px;
                background-color: blue;color:white" />
                        <input type="button" name="Nhapmoi" value="Nhập mới" style="margin: 5px;width:100px;
                background-color: blue;color:white" onclick="location.href='@Url.Action("TimKiemNC", "sinh_vien/TimKiemNC")'" />

                    </td>
                </tr>
            </table>
        }
    </div>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
         grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
        grid.Column("ma_sv","Mã sinh viên"), //the model fields to display
        grid.Column("ho_ten","Họ và tên" ),
        grid.Column("gioi_tinh","Giới tính"),
        grid.Column("ngay_sinh","Ngày sinh",format:@<text> @item.ngay_sinh.ToString("dd/MM/yyyy")</text>),
grid.Column("que_quan","Quê quán"),
grid.Column("lop","Lớp"),
grid.Column("sdt","Số điện thoại"),
grid.Column("email","Email"),
grid.Column("ngay_vao_o","Ngày vào ở",format:@<text> @item.ngay_vao_o.ToString("dd/MM/yyyy")</text>),
grid.Column("Phong.ten_phong","Phòng"),
grid.Column("Chức năng", format: @<text>
        <a href="@Url.Action("Edit",
                        new { id = item.ma_sv})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
        <a href="@Url.Action("Details",
                        new { id = item.ma_sv})" class="edit-btn"><abbr title="Xem chi tiết"><img src="/images/details.png" width="20" height="20" /></abbr></a>
        <a href="@Url.Action("Delete",
                        new { id = item.ma_sv})" class="edit-btn">
            <abbr title="Xóa dữ liệu">
                <img src="/images/delete.png" width="20" height="20" />
            </abbr>
        </a>
    </text>),
 }
 )
</div>
</body>
</html>